{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@paralogs/api-interfaces": [
        "libs/api-interfaces/src/index.ts"
      ],
      "@paralogs/front-core": [
        "libs/front-core/src/index.ts"
      ],
      "@paralogs/test-helpers": [
        "libs/test-helpers/src/index.ts"
      ],
      "@paralogs/auth/interface": [
        "libs/auth/interface/src/index.ts"
      ],
      "@paralogs/logbook/interfaces": [
        "libs/logbook/interfaces/src/index.ts"
      ],
      "@paralogs/auth/domain": [
        "libs/auth/domain/src/index.ts"
      ],
      "@paralogs/auth/secondary-adapters": [
        "libs/auth/secondary-adapters/src/index.ts"
      ],
      "@paralogs/logbook/secondary-adapters": [
        "libs/logbook/secondary-adapters/src/index.ts"
      ],
      "@paralogs/logbook/domain": [
        "libs/logbook/domain/src/index.ts"
      ],
      "@paralogs/shared/back": [
        "libs/shared/back/src/index.ts"
      ],
      "@paralogs/shared/back-test-helpers": [
        "libs/shared/back-test-helpers/src/index.ts"
      ],
      "@paralogs/shared/common": [
        "libs/shared/common/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
