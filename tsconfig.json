{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@paralogs/api-interfaces": ["libs/api-interfaces/src/index.ts"],
      "@paralogs/shared": ["libs/shared/src/index.ts"],
      "@paralogs/front-core": ["libs/front-core/src/index.ts"],
      "@paralogs/test-helpers": ["libs/test-helpers/src/index.ts"],
      "@paralogs/back/test-helpers": ["libs/back/test-helpers/src/index.ts"],
      "@paralogs/back/shared": ["libs/back/shared/src/index.ts"],
      "@paralogs/auth/interface": ["libs/auth/interface/src/index.ts"],
      "@paralogs/logbook/interfaces": ["libs/logbook/interfaces/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
